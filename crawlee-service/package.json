{
  "name": "argus-crawlee-service",
  "version": "1.0.0",
  "description": "Crawlee microservice for Argus - handles browser-based crawling and visual capture",
  "main": "dist/index.js",
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/index.js",
    "dev": "npx ts-node src/index.ts",
    "docker:build": "docker build -t argus-crawlee:latest .",
    "docker:run": "docker run -p 3000:3000 argus-crawlee:latest"
  },
  "dependencies": {
    "crawlee": "^3.11.0",
    "@crawlee/playwright": "^3.11.0",
    "playwright": "^1.48.0",
    "express": "^4.21.0",
    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "compression": "^1.7.4",
    "uuid": "^10.0.0",
    "winston": "^3.14.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/uuid": "^10.0.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
